{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build-playground",
            "command": "cargo",
            "args": [
                "build",
                "--bin",
                "playground"
            ],
            "options": {
                "env": {
                    "RUSTFLAGS": "-Awarnings"
                },
            },
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}